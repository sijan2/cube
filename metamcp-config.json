{
  "servers": {
    "leetcode": {
      "type": "STDIO",
      "command": "tsx",
      "args": ["server/src/mcp-server.ts"],
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "proxy": {
    "host": "0.0.0.0",
    "port": 12008,
    "cors": {
      "enabled": true,
      "origins": ["*"]
    },
    "auth": {
      "enabled": false
    }
  },
  "transport": {
    "sse": {
      "enabled": true,
      "path": "/sse"
    },
    "streamable": {
      "enabled": true,
      "path": "/stream"
    }
  }
}