{
  "name": "cube-server",
  "version": "1.0.0",
  "description": "TypeScript tRPC server for Cube with Poke API integration",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "dev:pnpm": "pnpm exec tsx watch src/index.ts",
    "type-check": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "mcp:leetcode": "node dist/mcp-server.js",
    "mcp:dev": "tsx src/mcp-server.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.0",
    "@trpc/server": "^10.45.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/pg": "^8.15.5",
    "better-auth": "^1.3.9",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.5",
    "express": "^4.18.2",
    "googleapis": "^159.0.0",
    "leetcode-query": "^2.0.1",
    "minimist": "^1.2.8",
    "pg": "^8.16.3",
    "pino": "^9.9.5",
    "postgres": "^3.4.7",
    "trpc-panel": "^1.3.4",
    "ws": "^8.18.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/minimist": "^1.2.5",
    "@types/node": "^20.10.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  }
}