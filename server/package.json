{
  "name": "cube-server",
  "version": "1.0.0",
  "description": "TypeScript tRPC server for Cube with Poke API integration",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "dev:pnpm": "pnpm exec tsx watch src/index.ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@trpc/server": "^10.45.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4",
    "trpc-panel": "^1.3.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  }
}